{%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%}
{%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%Repetição:%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%}
{%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%}

{------------------------------------------------------------------------------------------------------}
{--------------------------------------- WHILE --------------------------------------------------------}
{------------------------------------------------------------------------------------------------------}

var N1: real
var N2: real
var N3: real;
var MEDIA: real;
var CONT: integer; 
CONT:=0;
N1:= 5.0;
N2:= 6.0;
N3:= 7.0; 
while CONT<=50 do
  begin
     CONT:=CONT+1;
            {writeln ('nota 1: ');}
            {writeln ('nota 2: ');}
            {writeln ('Nota 3: ');}
     MEDIA:=(N1+N2+N3)/3;	     
  end;

{------------------------------------------------------------------------------------------------------}
{--------------------------------------- REPEAT UNTIL -------------------------------------------------}
{------------------------------------------------------------------------------------------------------}

{
var  num:real;
var  cont:integer;
repeat 
    writeln ('Digite um número para ver sua tabuada de multiplicação ');
    cont:=0;
      while cont<10 do  {temos aqui uma repetição dentro de outra}
      begin
         writeln(num:4:2,' x ',cont,' = ',(num*cont):6:2);
	     cont:=cont+1; {a cada repetição o cont aumenta +1}
      end
      until num=0; {condição para parar a repetição principal}
 end;
}

{------------------------------------------------------------------------------------------------------}
{--------------------------------------- FOR ----------------------------------------------------------}
{------------------------------------------------------------------------------------------------------}

{
var Nota1: real
var Nota2: real
var Nota3: real;
var MEDIA: real;
var CONT: integer; 
var CONT:integer;
CONT:=0;
Nota1:= 5.0;
Nota2:= 6.0;
Nota3:= 7.0;
for CONT:=1 to 10 do	 {para cont de 1 a 10 faça}
  begin
	  writeln ('Digite o nome e as 3 notas do ',cont,'o  aluno ');    
  end;
}